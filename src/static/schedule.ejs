<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/register.css" />
    <title>Novo agendamento</title>
  </head>
  <body>
    <%- include('includes/nav') %>
    <section class="container">
      <h1 class="text-center">FaÃ§a seu agendamento</h1>
      <%- include('includes/messages') %> <% if(user._id) { %>
      <form
        class="forms"
        action="/agendamento/edit/<%= user._id %>"
        method="POST"
      >
        <% } else { %>
        <form class="forms" action="/agendamento/create" method="POST"></form>
        <% } %>
        <input
          type="text"
          value="<%= user.name %>"
          name="name"
          placeholder="Nome"
        />
        <input
          type="number"
          value="<%= user.phone %>"
          name="phone"
          placeholder="Numero do celular"
        />
        <input
          type="text"
          value="<%= user.hour %>"
          name="hour"
          placeholder="Horario do agendamento"
        />
        <input
          type="text"
          value="<%= user.date %>"
          name="date"
          placeholder="Data do agendamento"
        />
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <button type="submit">Cadastrar</button>
      </form>
    </section>
  </body>
</html>
